<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgCPart"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="#7C7C7C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ImageStyle_Corners_Rounded_5dp"
        app:srcCompat="@drawable/rectangle" />

    <TextView
        android:id="@+id/txtCPtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imgCPart"
        app:layout_constraintTop_toTopOf="@+id/imgCPart" />

    <TextView
        android:id="@+id/txtCPartist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/txtCPtitle"
        app:layout_constraintTop_toBottomOf="@+id/txtCPtitle" />

    <ImageView
        android:id="@+id/btnCPadd"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/imgCPart"
        app:layout_constraintTop_toTopOf="@+id/imgCPart"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <View
        android:id="@+id/divider5"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCPart" />
</androidx.constraintlayout.widget.ConstraintLayout>